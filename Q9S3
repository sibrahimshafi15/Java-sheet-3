class Solution {
    public int rowWithMax1s(int arr[][]) {
        int n = arr.length;
        if (n == 0) return -1;
        int m = arr[0].length;

        int maxRowIndex = -1;
        
        int j = m - 1; 
        int i = 0;

        while (i < n && j >= 0) {
            if (arr[i][j] == 1) {
                maxRowIndex = i; 
                j--; 
            } 
           
            else {
                i++;
            }
        }

        return maxRowIndex;
    }
}
